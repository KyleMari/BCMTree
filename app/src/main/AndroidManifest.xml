<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carrefour.bcm_notification_system">



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.carrefour.bcm_notification_system.MainActivity" />
        </activity>
        <activity android:name=".TriggerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.carrefour.bcm_notification_system.MainActivity" />
        </activity>
        <activity android:name=".BCMStatusActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.carrefour.bcm_notification_system.TriggerActivity" />
        </activity>
        <activity android:name=".TeamLeadStatusActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.carrefour.bcm_notification_system.TriggerActivity" />
        </activity>
        <activity android:name=".BCMReportActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.carrefour.bcm_notification_system.TriggerActivity" />
        </activity>
        <activity android:name=".BCMEmailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.carrefour.bcm_notification_system.TriggerActivity" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

</manifest>